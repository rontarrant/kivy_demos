#: import Factory kivy.factory.Factory
<MyPopup@Popup>
	## Keeps the dialog from automatically closing
	## if the user clicks somewhere outside the Popup window.
	auto_dismiss: False
	title: "Colour Selection Error..."
	size_hint: None, None
	width: '200dp'
	height: '200dp'
	pos_hint: {"x": .2, "top": .8}
	
	BoxLayout:
		orientation: "vertical"
		
		Label:
			text: "Please select a\nBase Colour\nfirst."
		Button:
			text: "Close"
			font_size: 16
			on_release: root.dismiss()

<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		Label:
			text: "Popup Demo"
			font_size: 32
		
		Button:
			text: "Open Popup"
			font_size: 32
			on_release: Factory.MyPopup().open()

