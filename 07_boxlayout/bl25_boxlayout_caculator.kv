## Reproduction of a Tic Tac Toe game Screen
<MyBoxLayout>: ## outer box - vertical
	orientation: "vertical"
	spacing: 20
	padding: 20

	BoxLayout: ## top inner box - horizontal
		orientation: 'horizontal'
		size_hint_y: None
		height: "64dp"
	
		Label:
			text: "Down Payment"
			font_size: 32
		TextInput:
			text: "0"
			text_size: self.size
			halign: 'right'
			font_size: 32
	
	GridLayout: ## bottom inner box
		rows: 5
		spacing: 10
		
		CalcButton:
			id: button_01
			text: "1"
			on_release: root.release(self)
		CalcButton:
			id: button_02
			text: "2"
			on_release: root.release(self)
		CalcButton:
			id: button_03
			text: "3"
			on_release: root.release(self)
		CalcButton:
			id: button_04
			text: "4"
			on_release: root.release(self)
		CalcButton:
			id: button_05
			text: "5"
			on_release: root.release(self)
		CalcButton:
			id: button_06
			text: "6"
			on_release: root.release(self)
		CalcButton:
			id: button_07
			text: "7"
			on_release: root.release(self)
		CalcButton:
			id: button_08
			text: "8"
			on_release: root.release(self)
		CalcButton:
			id: button_09
			text: "9"
			on_release: root.release(self)
		CalcButton:
			id: button_000
			text: ",000"
			on_release: root.release(self)
		CalcButton:
			id: button_00
			text: "0"
			on_release: root.release(self)
		CalcButton:
			id: button_dot
			text: "."
			on_release: root.release(self)
		CalcButton:
			id: button_clr
			text: "CLR"
			on_release: root.release(self)
		CalcButton:
			id: button_can
			text: "CAN"
			on_release: root.release(self)
		CalcButton:
			id: button_ok
			text: "OK"
			on_release: root.release(self)

<CalcButton@Button>:
	font_size: 50
	size_hint: 1, 1
